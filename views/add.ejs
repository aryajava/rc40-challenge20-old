<%- include('layout') %>

<h2>Add New Data</h2>

<div class="">
  <form action="/add" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />

    <label for="height">Height:</label>
    <input type="number" id="height" name="height" required />

    <label for="weight">Weight:</label>
    <input type="number" step="0.01" id="weight" name="weight" required />

    <label for="birthdate">Birthdate:</label>
    <input type="date" id="birthdate" name="birthdate" required />

    <label for="married">Is Married:</label>
    <select id="married" name="married">
      <option value="No">Not Yet</option>
      <option value="Yes">Yes</option>
    </select>

    <button type="submit">Add Data</button>
  </form>
</div>

<script>
  document.getElementById("weight").addEventListener("change", function (e) {
    e.currentTarget.value = parseFloat(e.currentTarget.value).toFixed(1);
  });
</script>
